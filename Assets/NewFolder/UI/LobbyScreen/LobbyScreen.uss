#container {
    background-color: rgb(153, 153, 153);
    justify-content: center;
}

/* background */
#background {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    transition: 1s;
    background-color: white;
    background-image: url(/Assets/NewFolder/Resources/UI/lobbyBackground.svg);
    -unity-background-image-tint-color: rgba(255,255,255,0.12);
}

/* lobby-screen */
#lobby-screen {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    justify-content: center;
    transition: 0.4s;
}

/* top-lobby */
#top-lobby {
    position: absolute;
    top: 2%;
    width: 90%;
    align-self: center;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 16px;
}

#top-left-lobby {

}

#room-name {

}

#top-right-lobby {
    flex-direction: row-reverse;
    align-items: center;
}

#room-id {
    margin-right: 36px;
}

#exit-btn {
    width: 34px;
    height: 34px;
    border-radius: 20%;
    border-width: 2px;
    border-color: black;
    padding: 8px;
}

#exit-bg {
    scale: 0.8;
    transition: 0.2s;
    -unity-background-image-tint-color: red;
    background-image: url(/Assets/NewFolder/Icons/xMark.svg);
}
/* middle-lobby */
#middle-lobby {
    width: 100%;
    min-height: 380px;
    height: 30%;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.lobby-screen-box {
    min-width: 900px;
    width: 50%;
    flex-direction: row;
    justify-content: space-around;
}

.player-red-border, .player-blue-border {
    justify-content: center;
    align-items: center;
    min-width: 140px;
    height: 160px;
    padding: 24px 0;
}

/* player-card */
#player-card{
    
    background-color: black;
}
#player-card-bg {
    position: absolute;
    top: -6%;
    left: -6%;
    width: 140px;
    height: 160px;
    transition: 0.2s;
    background-color: white;
    justify-content: center;
}

.player-red-border {
    
}

.player-blue-border {
    
}

.red-team {
    background-color: white;
}

.blue-team {
    background-color: white;
}

.red-team #player-card-bg {
    border-width: 1px;
    border-color: red;
}

.blue-team #player-card-bg {
    border-width: 1px;
    border-color: rgb(0, 162, 232);
}

.red-team .player-name {
    color: black;

}

.blue-team .player-name {
    color: black;
}

