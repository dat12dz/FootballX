#mvp-screen {
	width: 1200px;
	height: 580px;
	align-self: center;
	overflow: hidden;
	transition: 0.4s;
}


#first-bg, #second-bg, #third-bg, #fourth-bg, #fifth-bg, #sixth-bg, #seventh-bg {
	position: absolute;
	width: 1200px;
	height: 580px;
	align-self: center;
	transition: 0.4s;
}
/* First-background */
#first-bg {
	background-color: black;
}

/* Second-background */
#second-bg {
	left: 0;
	width: 800px;
	background-color: black;
}

/* Third-background */
#third-bg {
	/* background-image: url(/Assets/NewFolder/Resources/UI/mvpThirdBackground.png); */
}

/* Fourth-background */
#fourth-bg {
	left: 0;
	background-color: white;
}

