/* Fifth-background */
#fifth-bg {
	left: 0;
	transition-delay: 0.12s;
	overflow: hidden;
}

#fifth-bg-box {
	position: absolute;
	width: 1200px;
	height: 580px;
	background-image: url(/Assets/NewFolder/Resources/UI/mvpFifthBackground.svg);
}

#sixth-bg {
	display: none;
	height: 580px;
	align-items: center;
	transition: 0.15s;
}

#sixth-bg-box {
	position: absolute;
	width: 1160px;
	height: 400px;
	background-image: url(/Assets/NewFolder/Resources/UI/mvpSixthBackground.svg);
	-unity-background-scale-mode: scale-to-fit;
	transition: 0.2s;
}

#seventh-bg {
	overflow: hidden;
	justify-content: center;
}

#seventh-bg-box {
	display: none;
	position: absolute;
	left: 6%;
	height: 720px;
	width: 300px;
	background-image: url(/Assets/NewFolder/Resources/UI/mvpSeventhBackground.svg);
	-unity-background-image-tint-color: black;
	transition: 0.4s;
}